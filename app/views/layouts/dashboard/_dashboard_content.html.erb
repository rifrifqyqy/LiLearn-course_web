<%# meta tag name %>
<% content_for :title, "Li-Learnv | Dashboard" %>

<main class="py-8 flex flex-col gap-4">
  <h1 class="text-3xl font-semibold w-fit self-start">
    Dashboard
  </h1>

  <%# header dashboard card %>
  <section class="grid grid-cols-3 justify-items-center gap-4 ">
    <div class="rounded-xl flex flex-col justify-between border-2 border-amber-500 h-44 bg-white/70 backdrop-blur-md w-full p-4 relative overflow-hidden">
      <%# <figure class="w-full h-full top-0 left-0 absolute -z-10 bg-white/65 backdrop-blur-sm"></figure> %>
      <figure class="bg-cover w-full h-full top-0 left-0 absolute blur-sm -z-20" style="background-image: url('<%= image_path('Bubble.jpeg') %>')"></figure>
      <article class="flex rounded-2xl gap-2 bg-white/50 border-2 border-white text-amber-600 backdrop-blur-md p-3 w-fit">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24">
          <path fill="currentColor" d="M8 16q.425 0 .713-.288T9 15V5q0-.425-.288-.712T8 4t-.712.288T7 5v10q0 .425.288.713T8 16m-2 6q-1.25 0-2.125-.875T3 19V5q0-1.25.875-2.125T6 2h9q.825 0 1.413.588T17 4v12q0 .825-.587 1.413T15 18H6q-.425 0-.712.288T5 19t.288.713T6 20h13V5q0-.425.288-.712T20 4t.713.288T21 5v15q0 .825-.587 1.413T19 22z" />
        </svg>
      </article>
      <article class="flex flex-col rounded-2xl gap-1 bg-white/50 border-2 border-white backdrop-blur-md py-2 px-4 w-fit ml-auto">
        <h2 class="text-[16px] font-semibold">Total Course</h2>
        <p class="text-zinc-500"><%= @total_course %> Course available</p>
      </article>

    </div>
    <div class="rounded-xl flex flex-col justify-between border-2 border-emerald-500 h-44 backdrop-blur w-full p-4 relative overflow-hidden">
      <%# <figure class="w-full h-full top-0 left-0 absolute -z-10 bg-white/65 backdrop-blur-sm"></figure> %>
      <figure class="bg-cover w-full h-full top-0 left-0 absolute blur-sm -z-20" style="background-image: url('<%= image_path('holo3.jpeg') %>')"></figure>
      <article class="flex rounded-2xl gap-2 bg-white/50 border-2 border-white text-emerald-600 backdrop-blur-md p-3 w-fit">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24">
          <path fill="currentColor" d="M10.63 14.1a7 7 0 0 1 9.27-3.47a7 7 0 0 1 3.47 9.27A6.98 6.98 0 0 1 17 24c-2.7 0-5.17-1.56-6.33-4H1v-2c.06-1.14.84-2.07 2.34-2.82S6.72 14.04 9 14c.57 0 1.11.05 1.63.1M9 4c1.12.03 2.06.42 2.81 1.17S12.93 6.86 12.93 8s-.37 2.08-1.12 2.83s-1.69 1.12-2.81 1.12s-2.06-.37-2.81-1.12S5.07 9.14 5.07 8s.37-2.08 1.12-2.83S7.88 4.03 9 4m8 18a5 5 0 0 0 5-5a5 5 0 0 0-5-5a5 5 0 0 0-5 5a5 5 0 0 0 5 5m-1-8h1.5v2.82l2.44 1.41l-.75 1.3L16 17.69z" />
        </svg>
      </article>
      <article class="flex flex-col rounded-2xl gap-1 bg-white/50 border-2 border-white backdrop-blur-md py-2 px-4 w-fit ml-auto">
        <h2 class="text-[16px] font-semibold">Active Users</h2>
        <p class="text-zinc-500"><%= @total_users_active %> Users online</p>
      </article>

    </div>
    <div class="rounded-xl flex flex-col justify-between border-2 border-sky-500 h-44 bg-white/70 backdrop-blur-md w-full p-4 relative overflow-hidden">
      <%# <figure class="w-full h-full top-0 left-0 absolute -z-10 bg-white/65 backdrop-blur-sm"></figure> %>
      <figure class="bg-cover w-full h-full top-0 left-0 absolute blur-sm -z-20" style="background-image: url('<%= image_path('holo.jpeg') %>')"></figure>
      <article class="flex rounded-2xl gap-2 bg-white/50 border-2 border-white text-sky-600 backdrop-blur-md p-3 w-fit">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24">
          <path fill="currentColor" d="M16 17v2H2v-2s0-4 7-4s7 4 7 4m-3.5-9.5A3.5 3.5 0 1 0 9 11a3.5 3.5 0 0 0 3.5-3.5m3.44 5.5A5.32 5.32 0 0 1 18 17v2h4v-2s0-3.63-6.06-4M15 4a3.4 3.4 0 0 0-1.93.59a5 5 0 0 1 0 5.82A3.4 3.4 0 0 0 15 11a3.5 3.5 0 0 0 0-7" />
        </svg>
      </article>
      <article class="flex flex-col rounded-2xl gap-1 bg-white/50 border-2 border-white backdrop-blur-md py-2 px-4 w-fit ml-auto">
        <h2 class="text-[16px] font-semibold">Registered Users</h2>
        <p class="text-zinc-500"><%= @total_normaluser %> Total users</p>
      </article>

    </div>

  </section>
</main>